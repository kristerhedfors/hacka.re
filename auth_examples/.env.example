# Authentication Examples Environment Configuration
# Copy this file to .env and fill in your values

# HMAC Authentication (32 bytes as hex string)
# Generate with: python -m auth_examples.src.keygen hmac
SHARED_SECRET=your_32_byte_shared_secret_as_64_hex_chars

# Ed25519 Authentication (32 bytes each as hex strings)
# Generate with: python -m auth_examples.src.keygen ed25519
PRIVATE_KEY=your_ed25519_private_key_as_64_hex_chars
CLIENT_PUBLIC_KEY=your_ed25519_public_key_as_64_hex_chars

# Request age limits (seconds)
MAX_REQUEST_AGE=300

# Server configuration
HMAC_SERVER_HOST=127.0.0.1
HMAC_SERVER_PORT=8000
ED25519_SERVER_HOST=127.0.0.1
ED25519_SERVER_PORT=8001

# Security Notes:
# - Keep PRIVATE_KEY and SHARED_SECRET secure and never commit to version control
# - CLIENT_PUBLIC_KEY can be shared safely
# - Rotate keys regularly for maximum security
# - Use strong entropy when generating keys