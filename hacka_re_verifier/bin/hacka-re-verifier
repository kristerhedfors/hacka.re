#!/usr/bin/env python3
"""
Command-line script to run the hacka.re verifier tool.
"""

import sys
import os

# Add the parent directory to the Python path
sys.path.insert(0, os.path.abspath(os.path.join(os.path.dirname(__file__), '..')))

from hacka_re_verifier.src.main import main

if __name__ == '__main__':
    sys.exit(main())
